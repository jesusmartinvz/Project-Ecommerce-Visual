@model IEnumerable<Ecommerce.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Maintenance.cshtml";
}

<div class="cabecera">
    <label>Categorias</label>
</div>
<br />


<div>
    <a asp-action="Create" class="btn btn-success">Nueva Categoria</a>
    <div style="float:right">
        @using (Html.BeginForm("Index", "Categoria"))
        {
            <em> Categoria: </em>
            @Html.TextBox("descripcion")
            <button>Buscar</button>

        }
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCategoria }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdCategoria }, new { @class = "btn btn-outline-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCategoria }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
