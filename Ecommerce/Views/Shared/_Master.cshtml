<body>
    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> +51-954124015</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> venta@pcstore.com</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> Av. Bolivia N° 199 - CC. CENTRO LIMA</a></li>
                </ul>
                <ul class="header-links pull-right">

                    <li><a href="#"><i class="fa fa-dollar"></i> USD</a></li>
                    @{
                        string texto = "Iniciar Sesión";
                        if ((Context.Session.GetString("_UserNormal") == null) || (Context.Session.GetString("_UserNormal") == ""))
                        {
                            <li><a asp-action="Index" asp-controller="Login"><i class="fa fa-user-o"></i> @texto</a></li>
                        }
                        else
                        {
                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @Context.Session.GetString("_UserNormal")
                                </button>
                                <div class="dropdown-menu" style="text-align:center;">
                                    <div class="dropdown-divider"></div>
                                    <a asp-action="CerrarSesion" asp-controller="Login" class="dropdown-item">Cerrar Sesion</a>
                                </div>
                            </div>
                        }
                    }

                </ul>
            </div>
        </div>
        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <img src="~/imagenes/Layout/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                <select class="input-select">
                                    <option value="0">All Categories</option>
                                    <option value="1">Category 01</option>
                                    <option value="1">Category 02</option>
                                </select>
                                <input class="input" placeholder="Buscar Aqui">
                                <button class="search-btn">Buscar</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <div>
                                <a asp-action="Carrito" asp-controller="Ecommerce">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Mi carrito</span>
                                    <div class="qty">@carrito.Count()</div>
                                </a>
                            </div>
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li class="desactive"><a asp-action="Catalogo" asp-controller="Ecommerce">Inicio</a></li>
                    <li class="desactive"><a asp-action="Contactanos" asp-controller="Ecommerce">Contactanos</a></li>
                    <!--
    <li><a href="#">Hot Deals</a></li>
    <li><a href="#">Categories</a></li>
    <li><a href="#">Laptops</a></li>
    <li><a href="#">Smartphones</a></li>
    <li><a href="#">Cameras</a></li>
    <li><a href="#">Accessories</a></li>
    -->
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
    <div>
        @RenderBody()
    </div>
    <!-- NEWSLETTER -->
    <div id="newsletter" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="newsletter">
                        <p>Si quieres recibir promociones especiales, suscribete a <strong>PCStore</strong></p>
                        <form>
                            <input class="input" type="email" placeholder="Ingrese su Correo">
                            <button class="newsletter-btn"><i class="fa fa-envelope"></i> Subscribir</button>
                        </form>
                        <ul class="newsletter-follow">
                            <li>
